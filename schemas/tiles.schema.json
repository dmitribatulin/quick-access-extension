{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Quick Access Tiles Schema",
  "type": "object",
  "definitions": {
    "tile": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "description": { "type": "string" },
        "icon": { "type": "string" },
        "backgroundColor": { "type": "string" },
        "borderColor": { "type": "string" },
        "hoverOverlayColor": { "type": "string" },
        "textColor": { "type": "string" },
        "file": { "type": "string" },
        "url": { "type": "string" },
        "command": { "type": "string" },
        "shouldOpenTerminal": { "type": "boolean" },
        "commandCwd": { "type": "string" },
        "iconSize": { "type": "number" }
      },
      "required": ["name"],
      "additionalProperties": false
    },
    "tileGroup": {
      "type": "object",
      "properties": {
        "groupName": { "type": "string" },
        "tiles": {
          "type": "array",
          "items": { "$ref": "#/definitions/tile" }
        }
      },
      "required": ["groupName", "tiles"],
      "additionalProperties": false
    }
  }
}
